#include <Servo.h>

#define S0 3
#define S1 4
#define S2 5
#define S3 6
#define sensorOut 7


Servo topServo;
Servo bottomServo;


int frequency = 0;
int color = 0;
int redTotal = 0;
int blueTotal = 0;
int greenTotal = 0;

void setup() {
  // put your setup code here, to run once:
  pinMode(S0, OUTPUT);
  pinMode(S1, OUTPUT);
  pinMode(S2, OUTPUT);
  pinMode(S3, OUTPUT);
  pinMode(sensorOut, INPUT);

  digitalWrite(S0, HIGH);
  digitalWrite(S1, LOW);

  topServo.attach(8);
  //topServo.write(90);
  bottomServo.attach(9);
  //bottomServo.write(90);

  Serial.begin(9600);

}


int colorSense() {
  int frequency = 0;
  int red = 0;
  int blue = 0;
  int green = 0;
  int sense = 0;

  //RED
  digitalWrite(S2, LOW);
  digitalWrite(S3, LOW);
  frequency = pulseIn(sensorOut, LOW);
  frequency = map(frequency, 43,51,255,0);
  red = frequency;
  Serial.print("R = ");
  Serial.print(frequency);
  Serial.print(" ");
  delay(100);

  //GREEN
  digitalWrite(S2, HIGH);
  digitalWrite(S3, HIGH);
  frequency = pulseIn(sensorOut, LOW);
  frequency = map(frequency, 44,49,255,0);
  green = frequency;
  Serial.print("G= ");
  Serial.print(frequency);
  Serial.print(" ");
  delay(100);

  //BLUE
  digitalWrite(S2, LOW);
  digitalWrite(S3, HIGH);
  frequency = pulseIn(sensorOut, LOW);
  frequency = map(frequency, 39,43,255,0);
  blue = frequency;
  Serial.print("B= ");
  Serial.print(frequency);
  Serial.println(" ");
  delay(100);

  //Serial.print(red);
  //Serial.print(" ");
  //Serial.print(green);
  //Serial.print(" ");
  //Serial.print(blue);
  //Serial.print(" ")

  //Serial.println(" ");
  delay(500);


  if (red > green && red > blue) {
    color = 1;
    Serial.println("RED");
    return color;
  }
  else if ( green > red && green > blue) {
    color = 2;
    Serial.println("GREEN");
    return color;
  }
  else if (blue > red && blue > green) {
    color = 3;
    Serial.println("BLUE");
    return color;
  }
}


int collectMarble() {
  Serial.println("Moving");
 topServo.write(5);
 delay(2000);
 

}


//int positionTray(color) {
int positionTray(int color) {
  Serial.println("Tray");
  if (color == 1) {
    bottomServo.write(0);
    redTotal = redTotal + 1;
    delay(500);
    return redTotal;
  }
  else if (color == 2) {
    bottomServo.write(90);
    blueTotal = blueTotal + 1;
    delay(500);
    return blueTotal;
  }
  else if (color == 3) {
    bottomServo.write(180);
    greenTotal = greenTotal + 1;
    delay(500);
    return greenTotal;
  }
}


int dispenseMarble() {
  topServo.write(165);
  delay(5000);
}



void loop() {
  // put your main code here, to run repeatedly:
collectMarble();
colorSense();
positionTray(color);
dispenseMarble();
Serial.println(color);
Serial.println("Red:    Blue:   Green:    ");
//bottomServo.write(180);
//delay(1000);
}
